                  {{/each}}

              </div>




      </div>
</body>
</html>

<script>

    function mostrarMios(){
        document.getElementById("mio").style.display = 'block';
        document.getElementById("fak").style.display =  'none';
}

    function mostrarGuardados(){
    document.getElementById("fak").style.display = 'block';
        document.getElementById("mio").style.display = 'none';
}


    function cambiarmio(seleccion) {
        let img = document.querySelector("#mio");
        img.setAttribute("id", seleccion);
    }



    function readURL(input) {
        console.log('elpapu')
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(200);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    async function favorito(id,usuario){
        const likebtn = document.getElementById('likeB'+id);
        const post = document.getElementById('post'+id);
        let caca;
        await fetch('http://localhost:8080/favorito', {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ "fotoo": id, "usuario": {{usuario}} })
        }).then(response => response.json())
                .then(response => {
                    caca = response
                })
        if (caca.resu==1){
            likebtn.value='like';
            post.innerHTML='';
        }
        if (caca.resu==2)
            likebtn.value='unlike';
    }
</script>
